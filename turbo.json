{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {},
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "test": {},
    "test:coverage": {},
    "test:e2e": {
      "cache": false,
      "outputs": ["apps/web/coverage/**"]
    },
    "test:e2e:ci": {
      "dependsOn": ["^build"],
      "outputs": ["packages/e2e/playwright-report/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalPassThroughEnv": ["PLAYWRIGHT_*"]
}
